{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "antlr-debug",
			"request": "launch",
			"name": "Debug Current Grammar",
			"grammar": "src/fass.g4",
			"input": "program.fass",
			"visualParseTree": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Fass",
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/src/fassRun.js",
			"args": ["${workspaceFolder}/program.fass"]
		},
		{
			"name": "Run file",
			"type": "node",
			"request": "launch",
			"program": "${file}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "npm start",
			"skipFiles": ["<node_internals>/**"],
			"program": "npm run start",
			"args": ["<", "${workspaceFolder}/program.fass"]
		},
		{
			"name": "Test",
			"type": "node-terminal",
			"request": "launch",
			"command": "jest",
			"env": { "NODE_OPTIONS": "--experimental-vm-modules" }
		}
	]
}
